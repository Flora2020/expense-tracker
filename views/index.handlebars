<div class="row mt-3">
  <div class="col-md-8">
    <form action="/records" method="get">
      <div class="input-group">

        <select class="form-select" name="category" aria-label="select category">
          <option value="" selected>所有分類</option>
          {{#each categories}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
        <div class="input-group-append">
          <button class="btn btn-major" type="submit">提交</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-8 d-flex justify-content-around">
    <div class="total-amount-title">總金額：</div>
    <div class="total-amount">{{totalAmount}}</div>
  </div>
</div>
{{!-- -------------------- --}}
{{#each records}}
<row class="mt d-flex record">
  <div class="col-md-8 d-flex justify-content-between align-items-center py-3 px-5 detail">
    <div class="d-flex align-items-center">
      <div class="icon"><i class="fas fa-utensils fa-3x"></i></div>
      <div>
        <div class="name">{{this.name}}</div>
        <div class="date">{{this.date}}</div>
      </div>
    </div>
    <div class="amount">{{this.amount}}</div>
  </div>
  <div class="col-md-4 d-flex justify-content-evenly align-items-center button-box">
    <form action="/records/{{this._id}}/edit" method="get">
      <button class="btn" type="submit">修改</button>
    </form>
    <form action="/records/{{this._id}}/delete" method="POST">
      <button class="btn" type="submit">刪除</button>
    </form>
  </div>
</row>
{{/each}}
<div class="row">
  <div class="col-md-8">
    <a href="/records/new" class="btn btn-new btn-major w-50">新增支出</a>
  </div>
</div>